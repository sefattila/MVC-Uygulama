@model List<Student>



<div class="container col-lg-8">
    <h3 class="text-center">Öğrenciler</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Classroom</th>
                <th scope="col">Güncelle</th>
                <th scope="col">Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Student item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.ClassId</td>
                    <td><a asp-controller="Student" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary" style="background-color:orange">Güncelle</a></td>
                    <td><a asp-controller="Student" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary" style="background-color:red">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Student" asp-action="Create" class="btn btn-primary" style="background-color:orange">Yeni Öğrenci Ekle</a>

</div>



