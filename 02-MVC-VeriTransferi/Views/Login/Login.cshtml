@model Account

<form asp-action="Login" method="post">
    <label>Kullanıcı Adı</label>
    <input type="text" asp-for="UserName"/>
    <br />
    <label>Şifre</label>
    <input type="password" asp-for="Password" />
    <br />
    <input type="submit" value="Giriş"/>
    <label>@ViewBag.Giris</label>
</form>